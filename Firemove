int fireMove(char** grid, char* playername)
{

    int column;
    int row;
    char input[20];

    printf(" %s Please enter the coordinates  to hit your opponents's ship in this format Fire [coordinates]: ", playername);
    {
        fgets(input, sizeof(input), stdin);
        // Remove newline if present
        clearInput(input, sizeof(input));
        // Get column and row coordinates

        column = getColumn(input[0]);
        
        int whiteSpaceIndex = 1;
        while (input[whiteSpaceIndex] != ' ' && whiteSpaceIndex < sizeof(input) - 1 && input[whiteSpaceIndex] != '\n') // get the index of the first white space
        {
            whiteSpaceIndex++;
        }
        row = getRow(input,whiteSpaceIndex);

        if (column == -1 || row == -1)
        {
            printf("Invalid coordinates. Please try again.\n");
            return -1; // Return -1 for invalid input
        }

        if (grid[row][column] == 'X')
        {
            // The player hit a ship
            printf("Hit!\n");
            grid[row][column] = '*'; // Mark the location of the hit
            return 1;
        }
        else
        {
            printf("Miss.\n");
            return 0;
        }
    }
}
